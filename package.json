{
  "name": "atlas-protocol-monorepo",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "dev:frontend": "cd apps/frontend && bun dev",
    "dev:agent": "cd apps/agent-service && bun run dev",
    "build:frontend": "cd apps/frontend && bun run build",
    "test:contracts": "cd contracts && forge test",
    "deploy:contracts": "cd contracts && forge script",
    "fetch:live-data": "bun run contracts/scripts/fetch-live-data.ts"
  },
  "devDependencies": {
    "turbo": "latest",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "better-sqlite3": "^12.5.0"
  }
}
